            <TextView
                android:layout_width="168dp"
                style="@style/Text"
                android:id="@+id/textAdres"
                android:text="ul.Wielska 45A"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/wrap"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="18dp">
        <RelativeLayout
            style="@style/wrap">

            <TextView

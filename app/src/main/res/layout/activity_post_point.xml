<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_post_point"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.us.mobilki.PostPointActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView style="@style/child"
            android:id="@+id/TextViewMap"
            android:layout_width="305dp"
            android:textColor="#000000"
            android:textSize="24dip"
            android:layout_margin="15dip"
            android:text="@string/string_point_post"
            android:layout_height="wrap_content"
            android:textAlignment="center"></TextView>

    </LinearLayout>


    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        map:cameraZoom="13"
        map:cameraTargetLat="53.118250"
        map:cameraTargetLng="23.149806"
        android:id="@+id/map3"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        />

</LinearLayout>
